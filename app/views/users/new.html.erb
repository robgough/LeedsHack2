<h1>Sign up</h1>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% for message in @user.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.text_field :email, :placeholder => "email" %><br />
		<%= f.password_field :password, :placeholder => "password" %><br />
		<%= f.password_field :password_confirmation, :placeholder => "password (again)" %>
	</p>

	<button type="submit" class="small red awesome">Join</button>
<% end %>