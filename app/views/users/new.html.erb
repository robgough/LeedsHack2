<h1>Weighted Down</h1>

<h2>Sign up</h2>

<p>Hey! I'm really excited you want to join us. Good luck with your weight loss!</p>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% for message in @user.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.text_field :email, :placeholder => "email" %><br />
		<%= f.text_field :name, :placeholder => "what do you like to be called?" %> (optional)<br />
		<%= f.password_field :password, :placeholder => "password" %><br />
		<%= f.password_field :password_confirmation, :placeholder => "password (again)" %>
	</p>

	<button type="submit" class="small red awesome">Join</button> or <%= link_to 'go to login', login_url %>. 
<% end %>